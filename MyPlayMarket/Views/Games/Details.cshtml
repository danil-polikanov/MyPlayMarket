@using MyPlayMarket.Infrastructure.Entities;
@model Game
@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/gameDetails.css" asp-append-version="true"/>
<div class="container">
    <h1>Details</h1>
    <div class="form-row">
        <form method="get" class="form-group details-button" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <form method="get" class="form-group details-button" asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Edit" class="btn btn-success" />
        </form>
    </div>
    <div class="d-flex flex-wrap gap-5">
        <div>
            <img src="@Model.UrlImage" onerror="https://s3.envato.com/files/10065422/Extra%20Previews/02_Preview2.png" class="update-game-img">
        </div>
        <div>
            <div class="text-white" style="max-width:500px;">
                <div>
                    <p>
                        @Model.Name
                    </p>
                    <p>
                        @Model.Description
                    </p>
                    <p>
                        @Model.Company
                    </p>
                    <p>
                        @Model.Cost
                    </p>
                    <p>
                        @Model.Release.ToShortDateString()
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>